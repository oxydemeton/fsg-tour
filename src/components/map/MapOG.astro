        <a href=`${base}/1.415.2/nord` aria-label="Klassenraum 1.415">
            <rect x="725" y="920" width="242" height="245"/>
        </a>
    </svg>
</Zoomable>

<style>
    svg {
        isolation: isolate;
    }
    line, polyline, path, rect {
        stroke: currentColor;
        @media not (prefers-reduced-transparency) {
            opacity: .8/*lightly transparent strokes so when the one in focus or hovered can shine through*/
        }
        stroke-width: 8;
        fill: transparent;
        padding: 0;
        margin: 0;
        stroke-linecap: square;
    }
    a {
        padding: 0;
        margin: 0;
        z-index: -10;
    }
    a:hover :is(path, line, rect) {
        fill: var(--highlight-bg-color);
        border: none;
        stroke-width: 14;
    }
    a:focus-visible {
        border: none;
        outline: none;
        path {
            fill: var(--highlight-bg-color);
        }
        z-index: 10;
    }
    a:hover {
        z-index: 10;
    }
    text {
        font-size: 512;
        fill: currentColor;
    }
    .map-treppe rect {
        fill: none;
        stroke-width: 3;
        @media (prefers-contrast: more) {
            stroke-width: 5;
        }
    }
    .map-treppe line {
        stroke-width: 2;
        @media not (prefers-reduced-transparency) {
            opacity: .5;
        }
        @media (prefers-contrast: more) {
            stroke-width: 3;
            opacity: 1;
        }
    }
</style>